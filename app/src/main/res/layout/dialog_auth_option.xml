<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/black"
    app:cardCornerRadius="28dp"
    app:cardElevation="16dp"
    app:strokeColor="#8A8174"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="32dp"
        android:paddingTop="32dp"
        android:paddingEnd="32dp"
        android:paddingBottom="24dp">

        <!-- Dynamic Icon - Will be replaced programmatically -->
        <ImageView
            android:id="@+id/dialog_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="Dialog icon"
            app:tint="@color/white" />

        <!-- Dynamic Title - Will be replaced programmatically -->
        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Feature Name"
            android:textAppearance="?attr/textAppearanceHeadlineSmall"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <!-- Dynamic Description - Optional, can be hidden -->
        <TextView
            android:id="@+id/dialog_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="Description of the feature"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="#CCCCCC"
            android:visibility="gone" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Disable Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_disable"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="Disable"
                android:textColor="@color/white"
                android:textStyle="normal"
                app:cornerRadius="16dp"

                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="@color/white"
                app:strokeColor="@color/white"
                app:strokeWidth="1.5dp" />

            <!-- Enable Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_enable"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="Enable"
                android:textColor="@color/black"
                android:textStyle="normal"
                app:backgroundTint="@color/white"
                app:cornerRadius="16dp"

                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="@color/black" />

        </LinearLayout>

        <!-- Dynamic Status Indicator -->
        <TextView
            android:id="@+id/status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Status: Not configured"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="#A8A29E" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>