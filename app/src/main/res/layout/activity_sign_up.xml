<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/monktemplebg3"

    tools:context=".signUpActivity">




    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="244dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#1A2F9E"
        android:gravity="center"
        android:text="Create Your Account"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/enterEmail"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="16dp"
        android:background="@color/gray_high_01"
        android:gravity="start|center_vertical"
        android:hint="Enter Your Email"
        android:inputType="textEmailAddress"
        android:paddingStart="18dp"
        android:textColor="@color/white"
        android:textColorHint="@color/gray_low_01"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/enterPassword"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:background="@color/gray_high_01"
        android:gravity="start|center_vertical"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingStart="18dp"
        android:textColor="@color/white"
        android:textColorHint="@color/gray_low_01"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterEmail" />

    <EditText
        android:id="@+id/confirmPassword"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:background="@color/gray_high_01"
        android:gravity="start|center_vertical"
        android:hint=" Confirm Password"
        android:inputType="textPassword"
        android:paddingStart="18dp"
        android:textColor="@color/white"
        android:textColorHint="@color/gray_low_01"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterPassword" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signUpButton"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/login_button_background"
        android:text="Sign Up"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmPassword" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signInText"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/login_button_background"
        android:gravity="center"

        android:text="Already have an account?Sign In"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signUpButton" />

    <ImageButton
        android:id="@+id/passEyeIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="sign up password visibility"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/enterPassword"
        app:layout_constraintEnd_toEndOf="@+id/enterPassword"
        app:layout_constraintHorizontal_bias="0.977"
        app:layout_constraintStart_toStartOf="@+id/enterPassword"
        app:layout_constraintTop_toTopOf="@+id/enterPassword"
        app:layout_constraintVertical_bias="0.49"

        app:srcCompat="@drawable/eyes_off" />

    <ImageButton
        android:id="@+id/confirmPassEyeIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="sign up confirm password visibility"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/confirmPassword"
        app:layout_constraintEnd_toEndOf="@+id/confirmPassword"
        app:layout_constraintHorizontal_bias="0.977"
        app:layout_constraintStart_toStartOf="@+id/confirmPassword"
        app:layout_constraintTop_toTopOf="@+id/confirmPassword"
        app:layout_constraintVertical_bias="0.49"

        app:srcCompat="@drawable/eyes_off" />


</androidx.constraintlayout.widget.ConstraintLayout>