<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text="â†"
                android:textSize="20sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Security and Privacy"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/primaryText" />

            <Space
                android:layout_width="48dp"
                android:layout_height="48dp" />

        </LinearLayout>

        <!-- Security Level Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/security_gradient">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Security Level"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/securityLevelText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Military Grade ðŸ”’"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:layout_marginTop="8dp" />

                <ProgressBar
                    android:id="@+id/securityLevelProgress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="12dp"
                    android:progress="100"
                    android:max="100"
                    android:progressTint="@android:color/white" />

                <TextView
                    android:id="@+id/securityDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your data is protected with military-grade security"
                    android:textSize="14sp"
                    android:textColor="#CCFFFFFF"
                    android:gravity="center"
                    android:layout_marginTop="12dp"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Security Badges -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/badgeEncryption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”’ End-to-End Encrypted"
                android:textSize="14sp"
                android:background="@drawable/security_badge"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/badgeBiometric"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ‘† Biometric Protected"
                android:textSize="14sp"
                android:background="@drawable/security_badge"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/badgeZeroKnowledge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸš« Zero Data Sharing"
                android:textSize="14sp"
                android:background="@drawable/security_badge"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:layout_gravity="center" />

        </LinearLayout>

        <!-- Biometric Authentication Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/fingerprint_alt_svgrepo_com"
                        android:layout_marginEnd="12dp"
                        app:tint="?attr/colorPrimary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Biometric Authentication"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primaryText" />

                    <Switch
                        android:id="@+id/biometricSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Use fingerprint or face recognition to protect your data"
                    android:textSize="14sp"
                    android:textColor="@color/secondaryText"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/biometricStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Biometric authentication available"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    android:layout_marginTop="8dp" />

                <Button
                    android:id="@+id/testBiometricButton"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Test Biometric"
                    android:backgroundTint="?attr/colorSecondary"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="12dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Data Encryption Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/key_svgrepo_com"
                        android:layout_marginEnd="12dp"
                        app:tint="?attr/colorPrimary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Data Encryption"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primaryText" />

                    <Switch
                        android:id="@+id/encryptionSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Encrypt your focus data with military-grade encryption"
                    android:textSize="14sp"
                    android:textColor="@color/secondaryText"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/encryptionStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Data not encrypted"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Privacy Features Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”’ Privacy Features"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primaryText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/folder"
                        android:layout_marginEnd="12dp"
                        app:tint="?attr/colorPrimary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="No Data Tracking"
                        android:textSize="16sp"
                        android:textColor="@color/primaryText" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ENABLED"
                        android:textSize="12sp"
                        android:textColor="@android:color/holo_green_dark"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="We never track your personal data or sell to third parties"
                    android:textSize="14sp"
                    android:textColor="@color/secondaryText"
                    android:layout_marginTop="4dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"
                    android:layout_marginVertical="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/folder_with_files_svgrepo_com"
                        android:layout_marginEnd="12dp"
                        app:tint="?attr/colorPrimary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Local-First Storage"
                        android:textSize="16sp"
                        android:textColor="@color/primaryText" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ENABLED"
                        android:textSize="12sp"
                        android:textColor="@android:color/holo_green_dark"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your data stays on your device. Cloud sync is optional."
                    android:textSize="14sp"
                    android:textColor="@color/secondaryText"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Data Management Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ—‘ï¸ Data Management"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primaryText" />

                <Button
                    android:id="@+id/wipeDataButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Wipe All Sensitive Data"
                    android:backgroundTint="@android:color/holo_red_dark"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Permanently delete encryption keys and sensitive data"
                    android:textSize="12sp"
                    android:textColor="@color/secondaryText"
                    android:gravity="center"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Security Footer -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ” Your privacy is our priority. All security features are designed to protect your data without compromising your experience."
            android:textSize="12sp"
            android:textColor="@color/secondaryText"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp" />

    </LinearLayout>

</ScrollView>