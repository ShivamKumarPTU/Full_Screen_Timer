<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/signOutDialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="32dp"
    android:background="@drawable/signoutbg"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Illustration centered with proper spacing -->
    <ImageView
        android:id="@+id/signoutlogo"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/signoutlogo_removebg_preview" />

    <!-- Title centered with consistent spacing -->
    <TextView
        android:id="@+id/signoutTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        android:text="@string/signOutTitle"
        android:textColor="@color/black"
        android:textSize="21sp"
        android:textStyle="bold" />

    <!-- Description with balanced margins and centered alignment -->
    <TextView
        android:id="@+id/signoutDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:gravity="center"
        android:lineSpacingExtra="2sp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="If you Sign Out it will erase all your data. "
        android:textColor="#262424"
        android:textSize="16sp" />

    <!-- Buttons with balanced spacing and proper alignment -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="4dp"
        android:paddingEnd="4dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signOutCancelButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="Cancel"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="normal" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signOutContinueButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:background="#FBC24F"
            android:text="Continue"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="normal" />

    </LinearLayout>

</LinearLayout>