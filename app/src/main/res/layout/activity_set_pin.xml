<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp"
    android:background="@drawable/zen_background"
    tools:context=".setPinActivity">

    <!-- Top Icon -->
    <ImageView
        android:id="@+id/setPinImage"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="32dp"
        android:src="@drawable/password_svgrepo_com"
        app:tint="?android:attr/textColorPrimary" />

    <!-- Title -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Set Your PIN"
        android:textAppearance="?attr/textAppearanceHeadline5"
        android:textColor="?android:attr/textColorPrimary"
        android:textStyle="bold" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/subtitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Create a secure PIN to protect your spiritual journey"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textColor="?android:attr/textColorSecondary" />

    <!-- Enter PIN Field -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="32dp"
        android:text="Enter PIN"
        android:textColor="?android:attr/textColorSecondary"
        android:textAppearance="?attr/textAppearanceLabelLarge" />

    <EditText
        android:id="@+id/pinEditText"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_text_background"
        android:gravity="center"
        android:inputType="numberPassword"
        android:maxLength="6"
        android:padding="16dp"
        android:letterSpacing="0"
        android:hint="Enter 4-6 Digit Pin "
        android:textColorHint="@color/gray_mid_03"
        android:textColor="@color/black"
        android:importantForAutofill="no" />


    <!-- Confirm PIN Field -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:text="Confirm PIN"
        android:textColor="?android:attr/textColorSecondary"
        android:textAppearance="?attr/textAppearanceLabelLarge" />

    <EditText
        android:id="@+id/confirmPinEditText"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_text_background"
        android:gravity="center"
        android:inputType="numberPassword"
        android:maxLength="6"
        android:padding="16dp"
        android:letterSpacing="0"
        android:hint="Confirm 4-6 Digit Pin"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_mid_03"
        android:importantForAutofill="no" />

    <!-- PIN Length Toggle -->
    <TextView
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="PIN Length"
        android:textColor="?android:attr/textColorSecondary"
        android:textAppearance="?attr/textAppearanceLabelLarge" />

    <!-- In your PIN Length Toggle section, update the buttons: -->
    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/pinLengthToggleGroup"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:singleSelection="true"
        app:selectionRequired="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_4_digits"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="4 digits"
            android:checked="true" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_6_digits"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="6 digits" />

    </com.google.android.material.button.MaterialButtonToggleGroup>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Confirm Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/confirmPinButton"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="32dp"
        android:text="Confirm PIN"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:icon="@drawable/confirm_sf_svgrepo_com"
        app:iconGravity="textStart"
        app:backgroundTint="@color/gray_low_04"
        app:cornerRadius="12dp" />

</LinearLayout>